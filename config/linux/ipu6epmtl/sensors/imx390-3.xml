            <format name="TI960 a" pad="2" width="1920" height="1200" format="V4L2_MBUS_FMT_SGRBG12_1X12" stream="2"/>
            <format name="TI960 a" pad="4" width="1920" height="1200" format="V4L2_MBUS_FMT_SGRBG12_1X12" stream="2"/>
            <format name="Intel IPU6 CSI2 0" pad="0" width="1920" height="1200" format="V4L2_MBUS_FMT_SGRBG12_1X12" stream="2"/>
